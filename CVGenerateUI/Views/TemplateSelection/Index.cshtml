    ViewData["Title"] = "CV Şablon Seçimi";
    Layout = "/Views/Shared/_InfoLayout.cshtml";
}
<!- Burda kaldın->
    <div class="d-flex align-items-center justify-content-center vh-100" style="padding-bottom: 150px;">
        <!-- Formlar -->
        <form class="multi-form">
            <div class="form-group mb-3 text-start">
                <input type="text" class="form-control" name="description1" placeholder="Açıklama 1">
            </div>
        </form>

        <form class="multi-form">
            <div class="form-group mb-3 text-start">
                <input type="text" class="form-control" name="description2" placeholder="Açıklama 2">
            </div>
        </form>

        <form class="multi-form">
            <div class="form-group mb-3 text-start">
                <input type="text" class="form-control" name="description3" placeholder="Açıklama 3">
            </div>
        </form>

        <!-- Tek buton -->
        <button type="button" class="btn btn-primary" onclick="submitAllForms()">Hepsini Gönder</button>

        <!-- JS ile formları gönder -->
        <script>
            function submitAllForms() {
                const forms = document.querySelectorAll(".multi-form");
                forms.forEach(form => form.submit());
            }
        </script>
    </div>
