@{
    ViewData["Title"] = "Genel Bilgiler";
    Layout = "/Views/Shared/_InfoLayout.cshtml";
}


<div class="accordion" id="accordionPanelsStayOpenExample" aria-live="polite">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true"
                aria-controls="panelsStayOpen-collapseOne">
                Açıklama
            </button>
        </h2>
        <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show">
            <div class="accordion-body">
                <form>
                    <div class="form-group mb-3 text-start">
                        <textarea class="form-control" id="description" rows="1"
                            placeholder="Kişisel Açıklama Giriniz.." oninput="autoGrow(this)"></textarea>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false"
                aria-controls="panelsStayOpen-collapseTwo">
                Eğitim Geçmişi
            </button>
        </h2>
        <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse">
            <div class="accordion-body">
                <form>
                    <div class="form-group mb-3 text-start">
                        <input type="text" class="form-control" id="description" placeholder="Üniversite Giriniz..">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false"
                aria-controls="panelsStayOpen-collapseThree">
                İş Geçmişi
            </button>
        </h2>
        <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse">
            <div class="accordion-body">
                <form>
                    <div class="form-group mb-3 text-start">
                        <input type="text" class="form-control" id="description" placeholder="İş giriniz">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#panelsStayOpen-collapseFour" aria-expanded="false"
                aria-controls="panelsStayOpen-collapseFour">
                Sertifikalar
            </button>
        </h2>
        <div id="panelsStayOpen-collapseFour" class="accordion-collapse collapse">
            <div class="accordion-body">
                <form>
                    <div class="form-group mb-3 text-start">
                        <input type="text" class="form-control" id="description" placeholder="İş giriniz">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Sortable.js CDN -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.14.0/Sortable.min.js"></script>


<script>
    // Sortable.js ile sıralama
    var el = document.getElementById('accordionPanelsStayOpenExample');
    var sortable = new Sortable(el, {
        handle: '.accordion-header',  // Sadece başlık kısmından sürükleme yapılır
        animation: 150,               // Animasyon süresi
    });

    function autoGrow(element) {
        element.style.height = "auto";
        element.style.height = (element.scrollHeight) + "px";
    }
</script>